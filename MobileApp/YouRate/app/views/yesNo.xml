<Alloy>
    <Window id="yesNoPage" onFocus="resizePage">
		<!-- iOS toolbar -->
		<Toolbar id="toolbar" platform="ios">
			<Button id="appName">uRate</Button>
		</Toolbar>
		
		<!-- iOS and Android -->
		<ImageView id="currentImage" defaultImage="/universal/placeholder.png"/> 
		<Button id="submitButton" onClick="doSubmit">Submit</Button> 
		<Button id="yesButton" onClick="doYes">Yes</Button>
		<Button id="noButton" onClick="doNo">No</Button>
    </Window>
</Alloy>