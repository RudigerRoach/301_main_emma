<Alloy>
    <Window id="normalPage" onOpen="resizePage" >
		<!-- iOS toolbar -->
		<Toolbar id="toolbar" platform="ios">
			<Button id="appName">uRate</Button>
		</Toolbar>
		
		<!-- iOS and Android -->
		<ImageView id="currentImage" defaultImage="/universal/placeholder.png"/>  
		<Button id="submitButton" onClick="doSubmit"></Button>   
        <Slider id="scoreSlider" top="50" min="0" max="100" width="100%" value="50"/>   
		<Label id="sliderLabel"></Label>   
        <TextArea id="sliderArea" keyboardType="Titanium.UI.NUMBER_PAD">    
    </Window>
</Alloy>