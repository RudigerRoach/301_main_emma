<Alloy>
	<Window id="loginPage" onOpen="setActionBar" >
		<!-- iOS toolbar -->
		<Toolbar id="toolbar" platform="ios">
			<Button id="appName">uRate</Button>
		</Toolbar>
		
		<!-- Android menu -->
		<Menu id="menu" platform="android">
			<MenuItem id="appName" title="uRate" />
		</Menu>
		
		<!-- iOS and Android -->
		<Label id="emailLabel">Email Address:</Label>	
        <TextArea id="textArea" keyboardType="Titanium.UI.KEYBOARD_EMAIL">
		<Button id="loginButton" onClick="doLogin">Login</Button>
		<ImageView id="loadingImage"/>
    </Window>
</Alloy>